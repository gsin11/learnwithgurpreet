        <li>{{ entry.title }}</li>
      {% else %}
        <li><a href="{{ entry.url | url }}" {%if entry.url == page.url%}aria-current="page"{% endif %}>{{ entry.title }}</a></li>
      {% endif %}
    {% endfor %}
  </ol>
</section>

<section>
  <h2>Recent Posts</h2>
  <ul class="big-words">
    {% for post in collections.posts | reverse | head(6) %}
    <li><a href="{{ post.url | url }}">{{ post.data.title }}</a></li>
    {% endfor %}
  </ul>
</section>