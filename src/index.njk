---
layout: layouts/home.njk
image: /assets/images/profile-pic.jpg
pagination:
  data: collections.posts
  size: 10
  alias: postslist
  reverse: true
eleventyNavigation:
  key: Home
  order: 1
excerpt: Experienced Front-end Technologist | Expert in jQuery, JavaScript, HTML5, CSS3, NodeJS, and ReactJS
---

{% set showDescription = true %}
{% include "partials/_page_heading.njk" %}
<div class="flex flex-col space-y-12 divide-y divide-gray-200">
  {% for post in postslist %}
    {% include "partials/_post_item.njk" %}
  {% endfor %}
</div>
{% if pagination.pageLinks.length > 1 %}

{% endif %}
<nav class="flex flex-col items-center justify-center pt-12 mt-12 space-x-0 space-y-2 border-t border-gray-200 md:space-x-2 md:space-y-0 md:flex-row">
  {% if pagination.previousPageLink %}
    <a class="w-full rounded-full btn btn-light btn-xl md:w-auto" href="{{ pagination.previousPageHref }}">Previous Page</a>
  {% else %}
    <span class="w-full rounded-full btn btn-light btn-xl md:w-auto">Previous Page</span>
  {% endif %}
  {% if pagination.nextPageLink %}
    <a class="w-full rounded-full btn btn-light btn-xl md:w-auto" href="{{ pagination.nextPageHref }}">Next Page</a>
  {% else %}
    <span class="w-full rounded-full btn btn-light btn-xl md:w-auto">Next Page</span>
  {% endif %}
</nav>