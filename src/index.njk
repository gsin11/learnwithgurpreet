---
layout: base.njk
---

<section class="w-full px-4 py-24 mx-auto max-w-7xl md:w-3/4 lg:w-2/4">
  <div class="mb-12 text-left md:text-center">
    <h1 class="mb-2 text-3xl font-extrabold leading-tight text-gray-900 dark:text-white">{{ meta.siteName }}</h1>
    <p class="text-lg text-gray-600 dark:text-white">{{ meta.blog.description }}</p>
  </div>
  <div class="flex flex-col space-y-12 items-center">
    <!-- loop posts -->
    {% set itemList = collections.posts %}

    {% for item in itemList.slice(0, 6) %}

      <div class="max-w-2xl px-8 py-4 bg-white rounded-lg shadow-md dark:bg-gray-800">
        <div class="flex items-center justify-between">
          <time class="text-sm font-light text-gray-600 dark:text-gray-400" datetime="{{ item.date | toIsoString }}">
            {{ item.date | formatDate('MMMM D, YYYY') }}
          </time>
          <span class="px-3 py-1 text-sm font-bold text-gray-100 transition-colors duration-300 transform bg-gray-600 rounded" aria-label="tagged in {{ item.data.tags[1] }}">{{ item.data.tags[1] }}</span>
        </div>

        <div class="mt-2">
          <a href="{{ item.url | url }}" class="text-xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline">{{ item.data.title }}</a>
          <p class="mt-2 text-gray-600 dark:text-gray-300">{{ item.data.description }}</p>
        </div>

        <div class="flex items-center justify-between mt-4">
          <a href="{{ item.url | url }}" class="text-blue-600 dark:text-blue-400 hover:underline">Continue Reading</a>

          <div class="flex items-center">
            <img class="hidden object-cover w-10 h-10 mx-4 rounded-full sm:block" src="https://images.unsplash.com/photo-1502980426475-b83966705988?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=40&q=80" alt="avatar">
            <span class="font-bold text-gray-700 cursor-pointer dark:text-gray-200">{{ meta.creator.name }}</span>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
