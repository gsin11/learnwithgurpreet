{% if page.url == pagination.href.first %}
  <section class="body-font">
    <div class="container pb-8 mx-auto">
      <h1 class="text-3xl font-bold py-12">Recent Posts</h1>
      <section class="flex flex-wrap -m-4" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
        {% for post in postslist | reverse %}
          <article class="p-4 md:w-1/3">
            <a href="{{ post.url | url }}" aria-label="{{ post.data.title }}" class="h-full border-2 pb-6 block border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
              {% if imageAlt %}
                {% set alt = imageAlt %}
              {% else %}
                {% set alt = "featured" %}
              {% endif %}
              {% responsiveImage "src" + post.data.image, alt, "lg:h-48 md:h-36 w-full object-cover pb-6 object-center" %}
              <h2 class="title-font text-lg font-medium mb-3 px-6">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h2>
              <p class="leading-relaxed mb-4 px-6">{{ post.data.excerpt }}...</p>
              <div class="flex items- flex-wrap px-6 justify-between">
                <span class="inline-flex items-center leading-none text-sm">
                  <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
                </span>
                <span class="inline-flex items-center leading-none text-sm">
                  <svg role="presentation" class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>{{ post | readingTime }}
                </span>
              </div>
            </a>
          </article>
        {% endfor %}
      </section>
    </div>
  </section>
{% endif %}
