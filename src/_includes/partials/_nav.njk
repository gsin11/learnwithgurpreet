<div class="flex flex-col md:flex-row md:mx-6">
  {% for entry in collections.all | eleventyNavigation %}
    <a class="my-2 text-gray-700 transition-colors duration-300 transform dark:text-gray-200 hover:text-blue-500 dark:hover:text-blue-400 md:mx-4 md:my-0" href="{{ entry.url | url }}" {%if entry.url == page.url%}aria-current="page"{% endif %}>{{ entry.title }}</a>
  {% endfor %}
  {% if showRSS === true %}
    <a class="my-2 text-gray-700 transition-colors duration-300 transform dark:text-gray-200 hover:text-blue-500 dark:hover:text-blue-400 md:mx-4 md:my-0" href="{{ '/feed/feed.xml' | url }}">RSS</a>
  {% endif %}
</div>