<ul class="text-center space-x-4 space-y-4">
  {% for tag in collections.tagList %}
    {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
    {% set postCount = collections.posts | postByTag(tag) | length %}
    <li class="inline-block"><a class="text-gray-900 dark:bg-gray-200 bg-gray-100 hover:bg-gray-200 dark:hover:bg-gray-100 p-1" href="{{ tagUrl | url }}">{{ tag }}({{ postCount }})</a></li>
  {%- endfor %}
</ul>