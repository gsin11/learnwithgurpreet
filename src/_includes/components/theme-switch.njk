<div
  role="region"
  class="theme-switch | cluster mt-xs"
  style="--cluster-horizontal-alignment: center; --gutter: 0.5rem"
  aria-labelledby="theme-switcher-label"
  data-theme-switcher
  hidden
>

  <h2 id="theme-switcher-label" class="sr-only">{{ meta.themeSwitch.title }}</h2>
  <button class="button" id="theme-toggle" data-theme="light">
    <span>{{ meta.themeSwitch.light }}</span>
  </button>
</div>
