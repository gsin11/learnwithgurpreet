{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      {% include "partials/components/intro.njk" %}
      <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-top-900 pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
        {{ content | safe }}
        {# {% include "partials/components/contact-form.njk" %} #}
        <h2>Follow me on</h2>
        <a href="{{ site.linkedin }}" rel="me">LinkedIn</a>
        <a href="{{ site.github }}" rel="me">Github</a>
        <a href="{{ site.mastodon }}" rel="me">Mastodon</a>
        <h2>Mail me at</h2>
        <a href="mailto:{{ site.authorEmail }}" rel="me">{{ site.authorEmail }}</a>
        <h2>Support me on</h2>
        <a href="{{ site.buyMeACoffee }}" rel="me">Buy Me a Coffee</a>
      </div>
    </article>
  </main>
{% endblock %}

{{ content | safe }}