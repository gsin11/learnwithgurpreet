---
layout: layouts/base.njk
---
<link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">
<h1 class="title">{{ title }}</h1>
<ul class="tags">
  {%- for tag in tags | filterTagList -%}
    {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
    <li><a href="{{ tagUrl | url }}">{{ tag }}</a><li>
  {%- endfor %}
  <li><date datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</date><li>
</ul>
{% if image %}
  {% if imageAlt %}
    {% set alt = imageAlt %}
  {% else %}
    {% set alt = "featured" %}
  {% endif %}
  {% responsiveImage "src" + image, alt %}
  <p class="caption">{{ imageAlt }}</p>
{% endif %}
{{ content | safe }}
<a target="_blank" rel="noopener noreferrer" href="https://github.com/learnwithgurpreet/learnwithgurpreet/blob/main/src/posts/{{ page.fileSlug }}.md">Edit post</a>
