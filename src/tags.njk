---
layout: layouts/page.njk
pagination:
  reverse: true
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: false
eleventyComputed:
  title: Tagged "{{ tag }}"
permalink: /tags/{{ tag | slug }}/
excerpt: List of posts tagged under "{{ tag }}"
---

<header class="w-full mx-auto mb-12 text-left">
  <h1 class="mb-3 text-3xl font-bold leading-tight md:text-4xl">
    Tagged: {{ tag }}
  </h1>
</header>

<ul class="flex flex-col">
  {% for post in collections[ tag ] | reverse | head(6) %}
    {% include "partials/_post_item.njk" %}
  {% endfor %}
</ul>