---
layout: layouts/page.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
eleventyComputed:
  title: "{{ tag }}"
permalink: /category/{{ tag | slug }}/
---

<header class="flex py-6 sm:py-8 md:py-16">
  <div class="w-full max-w-7xl m-auto px-5">
    <h1 class="text-2xl font-bold sm:text-4xl">{{ tag }}</h1>
  </div>
</header>

{% set allPosts = collections[ tag ] | reverse %}
{% include "components/grid-posts.njk" %}
